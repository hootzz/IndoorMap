<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".IndoorMapActivity">

    <TextView
        android:id="@+id/tvIndoorTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="실내 모드"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvCurrentLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="현재 위치: 알 수 없음"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvIndoorTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvFloorInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="현재 층: 1층"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvCurrentLocation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnChangeFloor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="층 변경"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvFloorInfo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <FrameLayout
        android:id="@+id/indoor_map_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/btnChangeFloor"
        app:layout_constraintBottom_toTopOf="@id/switch_to_map_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/switch_to_map_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="지도 모드"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>