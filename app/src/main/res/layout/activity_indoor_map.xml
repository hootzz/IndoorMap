<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".IndoorMapActivity">

    <TextView
        android:id="@+id/tvIndoorTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="실내 모드"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:contentDescription="실내 모드 화면"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvCurrentLocation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="현재 위치: 알 수 없음"
        android:textSize="18sp"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp"
        android:contentDescription="현재 위치 정보"
        app:layout_constraintTop_toBottomOf="@id/tvIndoorTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvFloorInfo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="현재 층: 1층"
        android:textSize="18sp"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="16dp"
        android:contentDescription="현재 층 정보"
        app:layout_constraintTop_toBottomOf="@id/tvCurrentLocation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnChangeFloorUp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="윗층으로"
        android:textSize="18sp"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp"
        android:contentDescription="윗층으로 이동"
        app:layout_constraintTop_toBottomOf="@id/tvFloorInfo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnChangeFloorDown" />

    <Button
        android:id="@+id/btnChangeFloorDown"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="아래층으로"
        android:textSize="18sp"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp"
        android:contentDescription="아래층으로 이동"
        app:layout_constraintTop_toBottomOf="@id/tvFloorInfo"
        app:layout_constraintStart_toEndOf="@id/btnChangeFloorUp"
        app:layout_constraintEnd_toEndOf="parent" />

    <FrameLayout
        android:id="@+id/indoor_map_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        android:contentDescription="실내 지도 표시 영역"
        app:layout_constraintTop_toBottomOf="@id/btnChangeFloorUp"
        app:layout_constraintBottom_toTopOf="@id/switch_to_map_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/switch_to_map_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="지도 모드로 전환"
        android:textSize="18sp"
        android:layout_margin="16dp"
        android:contentDescription="지도 모드로 전환 버튼"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>