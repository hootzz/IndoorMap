<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProjectBActivity"
    android:background="@color/background_color">

    <!-- 지도 영역을 표시하는 FrameLayout -->
    <FrameLayout
        android:id="@+id/map_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/log_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="8dp"/>

        <!-- 목적지까지 남은 걸음 수 표시 영역 -->
        <TextView
            android:id="@+id/remaining_steps_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:background="@drawable/status_background"
            android:padding="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/map_container"
            app:layout_constraintStart_toStartOf="@+id/map_container"
            app:layout_constraintEnd_toEndOf="@+id/map_container"
            android:layout_marginBottom="16dp" />

    <!-- 실시간 로그 표시 영역 -->
    <TextView
        android:id="@+id/log_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:textSize="16sp"
        android:background="@drawable/log_background"
        android:textColor="@color/log_text_color"
        app:layout_constraintBottom_toTopOf="@+id/total_distance_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="8dp" />

    <!-- 총 이동 거리 표시 영역 -->
    <TextView
        android:id="@+id/total_distance_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:textSize="16sp"
        android:textColor="@color/primary_text"
        app:layout_constraintBottom_toTopOf="@+id/movement_log_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="8dp" />

    <!-- 이동 로그 표시 영역 -->
    <TextView
        android:id="@+id/movement_log_view"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:padding="8dp"
        android:scrollbars="vertical"
        android:textSize="14sp"
        android:background="@drawable/log_background"
        android:textColor="@color/secondary_text"
        app:layout_constraintBottom_toTopOf="@+id/button_container"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="8dp" />

    <!-- 시작, 위치 초기화 버튼을 포함한 영역 -->
    <LinearLayout
        android:id="@+id/button_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="16dp">

        <Button
            android:id="@+id/start_stop_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="시작"
            android:backgroundTint="@color/button_start"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/reset_initial_position_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="초기 위치 재설정"
            android:backgroundTint="@color/button_reset"
            android:textColor="@android:color/white" />

    </LinearLayout>

    <!-- 상태를 표시하는 텍스트뷰 -->
    <TextView
        android:id="@+id/status_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@drawable/status_background"
        android:padding="8dp"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 메인 화면으로 돌아가는 버튼 -->
    <Button
        android:id="@+id/back_to_main_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="메인으로 돌아가기"
        android:backgroundTint="@color/button_back"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>